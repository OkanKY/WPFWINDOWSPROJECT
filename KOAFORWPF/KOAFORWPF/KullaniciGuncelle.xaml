<Window x:Class="KOAFORWPF.KullaniciGuncelle"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="KullaniciGuncelle" Height="300" Width="300" Background="#FFF90909">
    <Grid>
        <Label x:Name="KullaniciAdiText" Content="Kullanıcı Adı" HorizontalAlignment="Left" Margin="10,51,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.083,0.731"/>
        <Label x:Name="SifreText" Content="Şire" HorizontalAlignment="Left" Margin="51,115,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.639,0.509"/>
        <TextBox x:Name="KullaniciAdiTexBox" HorizontalAlignment="Left" Height="23" Margin="111,55,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="SifreTexBox" HorizontalAlignment="Left" Height="23" Margin="111,115,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Button x:Name="guncelleButton" Content="Güncelle" HorizontalAlignment="Left" Margin="10,176,0,0" VerticalAlignment="Top" Width="75" Background="#FFE6E4EA" Click="GirisButton_Click"/>
        <Button x:Name="cikisButton" Content="Çikiş" HorizontalAlignment="Left" Margin="201,176,0,0" VerticalAlignment="Top" Width="75" RenderTransformOrigin="0.139,0.671" Click="degistirButton_Click"/>

    </Grid>
</Window>
