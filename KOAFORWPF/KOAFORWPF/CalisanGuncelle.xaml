        <RadioButton x:Name="bayanRadio" Content="Kız" HorizontalAlignment="Left" Margin="107,180,0,0" VerticalAlignment="Top"/>
        <RadioButton x:Name="erkekRadio" Content="Erkek" HorizontalAlignment="Left" Margin="39,180,0,0" VerticalAlignment="Top"/>
        <Button x:Name="cikisButton" Content="Cıkış" HorizontalAlignment="Left" Margin="193,241,0,0" VerticalAlignment="Top" Width="75" Click="cikisButton_Click"/>
        <TextBox x:Name="isimBox" HorizontalAlignment="Left" Height="23" Margin="131,41,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="soyisimBox" HorizontalAlignment="Left" Height="23" Margin="131,65,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <DockPanel HorizontalAlignment="Left" Height="49" LastChildFill="False" Margin="39,162,0,0" VerticalAlignment="Top" Width="102"/>

    </Grid>
</Window>
