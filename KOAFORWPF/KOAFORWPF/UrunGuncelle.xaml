<Window x:Class="KOAFORWPF.UrunGuncelle"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="UrunGuncelle" Height="300" Width="300" Loaded="Window_Loaded" Background="#FFEC1717">
    <Grid>
        <Label x:Name="isimLabel" Content="Ürün İsmi" HorizontalAlignment="Left" Margin="53,42,0,0" VerticalAlignment="Top"/>
        <Label x:Name="fiyatLabel" Content="Ürin Fiyatı" HorizontalAlignment="Left" Margin="53,94,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.503,1.378"/>
        <TextBox x:Name="isimBox" HorizontalAlignment="Left" Height="23" Margin="138,42,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="fiyatBox" HorizontalAlignment="Left" Height="23" Margin="138,94,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Button x:Name="ekleButton" Content="Güncelle" HorizontalAlignment="Left" Margin="53,180,0,0" VerticalAlignment="Top" Width="75" Click="ekleButton_Click"/>
        <Button x:Name="cikisButton" Content="Cıkış" HorizontalAlignment="Left" Margin="183,180,0,0" VerticalAlignment="Top" Width="75" RenderTransformOrigin="0.239,0.769" Click="cikisButton_Click"/>

    </Grid>
</Window>
